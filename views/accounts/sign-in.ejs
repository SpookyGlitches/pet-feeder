<div class="text-light w-25 container">
  <div class="d-flex flex-column justify-content-center vh-100">
    <form action="/accounts/sign-in" class="m-0 p-0" method="post">
      <h1 class="text-center mb-3">Sign in</h1>
      <div class="form-group">
        <input type="email" name="email" id="" class="form-control" placeholder="Email" aria-describedby="helpId" required>
      </div>
      <div class="form-group">
        <input type="password" name="password" id="" class="form-control" placeholder="Password" aria-describedby="helpId" required>
      </div>
      <button type="submit" class="btn btn-primary">Submit</button>
    </form>
  </div>
</div>
