<div class="modal fade" id="modelId" tabindex="-1" role="dialog" aria-labelledby="modelTitleId" aria-hidden="true">
  <div class="modal-dialog" role="document">
      <div class="modal-content">
              <div class="modal-header">
                      <h5 class="modal-title font-weight-bold text-uppercase">Set up</h5>
                          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                              <span aria-hidden="true">&times;</span>
                          </button>
                  </div>
          <form action="/add-pet" method="POST" class="m-0 p-0">
            <div class="modal-body">
              <div class="row">
                <div class="col">
                    <div class="form-group">
                      <label for="">What is your pet's name?</label>
                      <input type="text" class="form-control form-control-sm" name="name" id="" aria-describedby="helpId" placeholder="snuffles">
                    </div>
                    <div class="form-group">
                      <label for="">Additional details to be included</label>
                      <input type="text" class="form-control form-control-sm" name="details" id="" aria-describedby="helpId" placeholder="optional">
                    </div>
                    <div class="form-group">
                      <label for="">How many times do you want your pet to be fed?</label>
                      <input type="number" min="1" max="10" class="form-control form-control-sm" name="quantity" id="quantity" aria-describedby="helpId" placeholder="0">
                    </div>
                    <div class="form-group">
                        <label for="">Schedules</label>
                        <div id="schedules">
                        </div>
                    </div>
                    <div class="form-group">
                      <label for="">Tile Color</label>
                      <select class="custom-select text-light" name="color" id="color" style="background-color: #ff595e;" onchange="changeColor(event)">
                        <option value="#ff595e">Red</option>
                        <option value="#ffca3a">Yellow</option>
                        <option value="#8ac926">Green</option>
                        <option value="#1982c4">Blue</option>
                        <option value="#6a4c93">Purple</option>
                      </select>
                    </div>
                </div>
                <!-- <div class="col">
                  <div class="form-group">
